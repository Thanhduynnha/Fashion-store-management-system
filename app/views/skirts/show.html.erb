<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Skirt</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to skirts_path, class: button_class(theme: "transparent") do %>
      All Skirts
      <% end %>
      <%= link_to edit_skirt_path(@skirt), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Fullname:</p>
        <p><%= @skirt.Fullname %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @skirt.Description %></p>
      </li>
      <li>
        <p class="font-semibold">Quantity:</p>
        <p><%= @skirt.Quantity %></p>
      </li>
      <li>
        <p class="font-semibold">Price:</p>
        <p><%= @skirt.Price %></p>
      </li>
      <li>
        <p class="font-semibold">Url:</p>
        <p><%= @skirt.Url %></p>
      </li>
  </ul>
</div>
