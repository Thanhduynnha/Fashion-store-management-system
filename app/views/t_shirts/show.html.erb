<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">T_shirt</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to t_shirts_path, class: button_class(theme: "transparent") do %>
      All T_shirts
      <% end %>
      <%= link_to edit_t_shirt_path(@t_shirt), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Fullname:</p>
        <p><%= @t_shirt.Fullname %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @t_shirt.Description %></p>
      </li>
      <li>
        <p class="font-semibold">Quantity:</p>
        <p><%= @t_shirt.Quantity %></p>
      </li>
      <li>
        <p class="font-semibold">Price:</p>
        <p><%= @t_shirt.Price %></p>
      </li>
      <li>
        <p class="font-semibold">Url:</p>
        <p><%= @t_shirt.Url %></p>
      </li>
  </ul>
</div>
